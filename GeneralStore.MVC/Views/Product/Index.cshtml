@model IEnumerable<GeneralStore.MVC.Models.Product> 

@{
    ViewBag.Title = "Index";
}

<h2>Product</h2>

<p>@Html.ActionLink("Add a Product", "Create")</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFood)
        </th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inventory) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFood)
            </td>
            <td>
                @Html.ActionLink("Modify","Edit", new {id = item.ProductId}) |
                @Html.ActionLink("More Info","Details", new {id = item.ProductId}) |
                @Html.ActionLink("Remove","Delete", new {id = item.ProductId}) |
            </td>
        </tr>
    }
</table>